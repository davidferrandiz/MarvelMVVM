<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/character_image_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/character_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C8ED1D24"
        android:gravity="center"
        android:padding="6dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/character_image_iv"
        app:layout_constraintEnd_toEndOf="@+id/character_image_iv"
        app:layout_constraintStart_toStartOf="@+id/character_image_iv"
        tools:text="Hulk" />

</androidx.constraintlayout.widget.ConstraintLayout>